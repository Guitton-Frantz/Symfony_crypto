        <th class="active text-center">{{'Price'|trans}}</th>
        <th class="active text-center">{{'Date creation'|trans}}</th>
        <th class="active text-center">{{'Action'|trans}}</th>
    </tr>
    {% for favori in favoris  %}
    <tr>
        <td>{{favori.id}}</td>
        <td>{{favori.name}}</td>
        <td>{{favori.slug}}</td>
        <td>{{favori.marketCap}}</td>
        <td>{{favori.projet}}</td>
        <td>{{favori.price}}</td>
        <td>{{favori.dateCreation|date('Y-m-d')}}</td>
    </tr>
    {% endfor %}
</table>
<td><a href="{{ path('favoris.add')}}" class="btn btn-success">{{'Ajouter un favoris'|trans}}</a></td>

