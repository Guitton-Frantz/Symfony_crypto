{% extends 'base.html.twig' %}

{% block body %}
<td>{{'Bienvenue'|trans}} : {{ last_username }}</td>
<h2>{{'Favoris'|trans}}</h2>
<table class="table text-center">
    <tr>
        <th class="active text-center">{{'id'|trans}}</th>
        <th class="active text-center">{{'Nom'|trans}}</th>
        <th class="active text-center">{{'Sigle'|trans}}</th>
        <th class="active text-center">{{'Market cap'|trans}}</th>
        <th class="active text-center">{{'projet'|trans}}</th>
