{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails du stage <i>{{ crypto.name }}</i> à pourvoir :</h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ crypto.name }}</strong> <i>({{ crypto.slug }})</i></h3>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">Publié le {{ crypto.dateCreation|date('m/d/Y') }}</i>
                </div>
            </div>

            <p>
                <strong>{{ crypto.projet }}</strong>
                <small> - <i>{{ crypto.categorie }}</i></small>
            </p>

            <p>
                {% for comm in crypto.getCommentaire %}

                <td>comm.com</td>
                <td>comm.getUser.nom</td>

            </p>
        </div>
    </div>
{% endblock %}