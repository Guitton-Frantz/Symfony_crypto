{% extends 'base.html.twig' %}

{% block body %}

    <div class="alert alert-danger">
        <strong>{{'Avertissement !'|trans}}</strong> {{'Vous êtes en train de supprimer le commentaire suivant :'|trans}}
        <ul>
            <li><strong>{{'Commentaire : '|trans}}</strong> {{ commentaire.com }}</li>
            <li><strong>{{'Sur la Crypto : '|trans}}</strong>{{ commentaire.cryptomonnaie }}</li>
        </ul>
    </div>
    <div class="collapse navbar-collapse">
    {{ form_start(form, {'attr': {'class': 'navbar-form navbar-left'}}) }}
    {{ form_widget(form) }}
        <a href="{{ path('app_profile') }}" class="btn btn-success" role="button"><span class="glyphicon glyphicon-off" aria-hidden="true"></span>{{'Annuler'|trans}}</a>
        <button type="submit" class="btn btn-danger" onclick="return confirm('{{'Êtes vous sûr ??'|trans}}')">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        {{'Supprimer'|trans}}
    </button>
    {{ form_end(form) }}
    </div>
{% endblock %}